{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Phaser + Vite in Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "preLaunchTask": "npm: dev",
            "postDebugTask": "terminate npm dev",
            "timeout": 30000
        }
    ]
}
